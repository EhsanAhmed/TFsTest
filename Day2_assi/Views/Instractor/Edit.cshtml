@model Instractor

<form method="post" action="/Instractor/SaveEdit/@Model.Id">
    <div>
        <label for="Name">Name</label>
        <input type="text" name="Name" id="Name" value="@Model.Name" class="form-control" />
    </div>
    <div>
        <label for="Address">Address</label>
        <input type="text" name="Address" id="Address" value="@Model.Address" class="form-control" />
    </div>

    <div>
        <label for="Image">Image</label>
        <input type="text" name="Image" id="Image" value="@Model.Image" class="form-control" />
    </div>
    <div>
        <label for="Dept_ID">Dept_ID</label>
        @*<input type="text" name="Dept_ID" id="Dept_ID" value="@Model.Dept_ID" class="form-control" />*@
        <select class="form-control" name="Dept_ID" id="Dept_ID">

            @foreach (Department deptItem in ViewBag.Depts)
            {
                if (Model.department.Id == deptItem.Id)
                {
                    <option value="@deptItem.Id" selected>@deptItem.Name</option>
                }
                else
                {
                    <option value="@deptItem.Id">@deptItem.Name</option>
                }
            }
        </select>
    </div>

    <div>
        <label for="Course_ID">Course Name</label>
        @*<input type="text" name="Dept_ID" id="Dept_ID" value="@Model.Dept_ID" class="form-control" />*@
        <select class="form-control" name="Course_ID" id="Course_ID">
            @foreach (Course course in ViewBag.Courses)
            {
                if (Model.Course.Id == course.Id)
                {
                    <option value="@course.Id" selected>@course.Name</option>
                }
                else
                {
                    <option value="@course.Id">@course.Name</option>
                }
            }
        </select>
    </div>
    <div>
        <label for="Salary">Salary</label>
        <input type="text" name="Salary" id="Salary" value="@Model.Salary" class="form-control" />
    </div>
    <input type="submit" value="Save" class="btn btn-success" />
</form>
